<div class="availability-form">
  <h1>Input Your Availability</h1>
  <p>We will create pairing session times based on when you are available.</p>
  <%= form_for :timeslots, :url => challenge_timeslots_path do |f| %>
    <div class="form-group">


      <div class="form-group row">
        <%= f.label :start_date, :class => "col-xs-2 col-form-label" %>
        <div class="col-xs-10 col-sm-4 col-md-3 col-lg-2">
          <%= f.datetime_local_field :start_date, class: "form-control", :value => @timeslot.try(:start_date), :type =>"date", :id => "timeslot-date-input", :required => true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :start_time, :class => "col-xs-2 col-form-label" %>
        <div class="col-xs-10 col-sm-4 col-md-3 col-lg-2">
          <%= f.select :start_time,show_time_options, {}, class: "form-control form-control-sm", :id => "timeslot-time-start-input", :required => true %>

        </div>
      </div>

      <div class="form-group row">
        <%= f.label :end_time, :class => "col-xs-2 col-form-label" %>
        <div class="col-xs-10 col-sm-4 col-md-3 col-lg-2">
          <%= f.select :end_time,show_time_options, {}, class: "form-control form-control-sm", :id => "timeslot-time-end-input", :required => true %>
        </div>
      </div>
    </div>

  <% if @errors %>
    <div class="errors" id="timeslot-errors">
      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
