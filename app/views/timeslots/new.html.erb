<% if @errors %>
  <div class="errors">
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :timeslots, :url => challenge_timeslots_path do |f| %>
  <div class="form-group">
    <div class="form-group row">
      <%= f.label :start_date, :class => "col-xs-2 col-form-label" %>
      <div class="col-xs-10 col-sm-4 col-md-3 col-lg-2">
        <%= f.datetime_local_field :start_date, class: "form-control", :value => @timeslot.try(:start_date), :type =>"date", :id => "example-date-input"%>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :start_time, :class => "col-xs-2 col-form-label" %>
      <div class="col-xs-10 col-sm-4 col-md-3 col-lg-2">
        <%= f.datetime_local_field :start_time, class: "form-control", :value => @timeslot.try(:start_time), :type =>"time", :id => "example-time-start-input", :required => true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :end_time, :class => "col-xs-2 col-form-label" %>
      <div class="col-xs-10 col-sm-4 col-md-3 col-lg-2">
        <%= f.datetime_local_field :end_time, class: "form-control", :value => @timeslot.try(:end_time), :type =>"time", :id => "example-time-end-input", :required => true %>
      </div>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
